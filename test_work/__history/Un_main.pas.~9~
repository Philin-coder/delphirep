unit Un_main;
{*
Учебный проект для демонстрации работы с СУБД.
*}

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Grids, DBGrids, StdCtrls, ComCtrls;

type
  TFrm_main = class(TForm)
    groupconditionsel: TPageControl;
    SelTabSheet: TTabSheet;
    InsTabSheet: TTabSheet;
    updTabSheet: TTabSheet;
    delTabSheet: TTabSheet;
    groupconditionbox: TGroupBox;
    selEdit: TEdit;
    buttonBox: TGroupBox;
    condbutton: TButton;
    GroupBox1: TGroupBox;
    selDBGrid: TDBGrid;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_dm;

{$R *.dfm}

procedure TFrm_main.FormActivate(Sender: TObject);
begin
dm.StudQuery.Open;
end;

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
dm.StudQuery.Close
end;

end.
