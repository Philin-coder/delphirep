unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Menus,adodb,db;
const
  FileName = 'connection_string.txt';
  TargetDatabaseName = 'libr_r';

type
  TFrm_main = class(TForm)
    ItemnMenu: TMainMenu;
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_dm, Un_func;

{$R *.dfm}

procedure TFrm_main.FormActivate(Sender: TObject);
begin
   DisableLoginPromptsOnDataModule('dm');
   SaveConnectionStringToFile(FileName, dm.connection.ConnectionString);
     if IsConnectedToDatabase(TargetDatabaseName, Connection) then
    ShowMessage('Программа подключена к правильной базе данных.')
  else
    ShowMessage('Программа подключена к другой базе данных.');
end;



end.
