unit Un_man;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs,jpeg, Menus, ExtCtrls;

type
  TFrm_main = class(TForm)
    ItemMenu: TMainMenu;
    good_item: TMenuItem;
    main_Image: TImage;
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure good_itemClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_func, Un_good;

{$R *.dfm}

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
main_Image.Picture:=nil;
end;

procedure TFrm_main.FormCreate(Sender: TObject);
begin
SetFormPropertiesIfNeeded;
// Закрытие всех запросов на форме 'dm'
 // CloseAllQueriesOnForm('dm'); вызов
 with main_Image do
 begin
     Stretch:=True;
     AutoSize:=True;
 end;
 LoadImageFromResource('BACKGROUND_IMAGE',main_Image);
end;

procedure TFrm_main.good_itemClick(Sender: TObject);
begin
try
UpdateFormProperties('frm_good', 'Форма работы с товаром',
clBtnFace, 1024, 768);
Frm_good.ShowModal;
except
Frm_good.Free;
raise;
end;
end;

end.
