unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ExtCtrls,jpeg, Menus;

const
  FileName = 'connection_string.txt';


type
  TFrm_main = class(TForm)
    main_Image: TImage;
    ItemMenu: TMainMenu;
    teacher_item: TMenuItem;
    subjet_item: TMenuItem;
    stud_item: TMenuItem;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure teacher_itemClick(Sender: TObject);
    procedure subjet_itemClick(Sender: TObject);
    procedure stud_itemClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_func, Un_dm, Un_teacher, Un_subject, Un_stud;

{$R *.dfm}

procedure TFrm_main.FormActivate(Sender: TObject);
begin
  SaveConnectionStringToFile(FileName, dm.connection.ConnectionString);
end;

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  main_Image.Picture := nil;
  SaveFormState(Self);
end;

procedure TFrm_main.FormCreate(Sender: TObject);
begin
  SetFormPropertiesIfNeeded;
  with main_Image do
  begin
    Stretch := True;
    AutoSize := True;
  end;
  LoadFormState(Self);
  LoadImageFromResource('BACKGROUND_IMAGE', main_Image);
end;

procedure TFrm_main.stud_itemClick(Sender: TObject);
begin
  try
    UpdateFormProperties('Frm_stud', 'Форма работы с данными студента',
      clBtnFace, 1024, 768);
    Frm_stud.ShowModal;
  except
    Frm_stud.Free;
    raise;
  end;
end;

procedure TFrm_main.subjet_itemClick(Sender: TObject);
begin
  try
    UpdateFormProperties('Frm_subject', 'Форма работы с данными предмета',
      clBtnFace, 1024, 768);
    Frm_subject.ShowModal;
  except
    Frm_subject.Free;
    raise;
  end;
end;

procedure TFrm_main.teacher_itemClick(Sender: TObject);
begin
   try
    UpdateFormProperties('Frm_teacher', 'Форма работы с данными преподавателя',
      clBtnFace, 1024, 768);
    Frm_teacher.ShowModal;
  except
    Frm_teacher.Free;
    raise;
  end;
end;

end.
