unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs,dateUtils, StdCtrls, Buttons;

type
  TFrm_main = class(TForm)
    BitBtn1: TBitBtn;
    procedure BitBtn1Click(Sender: TObject);

    



  private
    { Private declarations }
  public
    { Public declarations }


  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_func;

{$R *.dfm}


  // Если форма найдена — работаем с ней через with..do
  if Assigned(Form) then
  begin
    with Form do
    begin
      Caption := 'Новый заголовок'; // Пример изменения свойства
      Color := clYellow;
      // Другие действия...
    end;
  end
  else
    ShowMessage('Форма с именем ' + FormName + ' не найдена!');
end;

     


procedure TFrm_main.BitBtn1Click(Sender: TObject);
var
  CurrentFormName: string;
begin
CurrentFormName := GetActiveFormName; // Получаем имя активной формы
  ProcessForm(CurrentFormName);
end;

end.


