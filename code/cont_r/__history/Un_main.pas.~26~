unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs,dateUtils, StdCtrls, Buttons;

type
  TFrm_main = class(TForm)
    BitBtn1: TBitBtn;

    



  private
    { Private declarations }
  public
    { Public declarations }


  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_func;

{$R *.dfm}

procedure ProcessForm(const FormName: string);
var
  Form: TForm;
begin
  // Находим форму по имени
  Form := nil;
  for var i := 0 to Screen.FormCount - 1 do
  begin
    if Screen.Forms[i].Name = FormName then
    begin
      Form := Screen.Forms[i];
      Break;
    end;
  end;

  // Если форма найдена — работаем с ней через with..do
  if Assigned(Form) then
  begin
    with Form do
    begin
      Caption := 'Новый заголовок'; // Пример изменения свойства
      Color := clYellow;
      // Другие действия...
    end;
  end
  else
    ShowMessage('Форма с именем ' + FormName + ' не найдена!');
end;

     


end.


