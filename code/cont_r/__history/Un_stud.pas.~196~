          datapr_inp.Date
        );

        Parameters.CreateParameter(
          'grup_id',
          ftInteger,
          pdInput,
          0,
          gr_DBL.KeyValue
        );

        Parameters.CreateParameter(
          'st_email',
          ftString,
          pdInput,
          1000,
          st_email_inp.Text
        );
        Parameters.CreateParameter(
          'is_akadem',
          ftInteger,
          pdInput,
          0,
          akadem_st
