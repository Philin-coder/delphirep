unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs,dateUtils;

type
  TFrm_main = class(TForm)
   function DateToStr_(Dat : TDate): String;
   function CommaPoint (X: String) : String;
  private
    { Private declarations }
  public
    { Public declarations }

  end;

var
  Frm_main: TFrm_main;

implementation

{$R *.dfm}

function TFrm_main.DateToStr_(Dat : TDate): String;
begin
  Result:= IntToStr(MonthOf(Dat))+'.'
  +IntToStr(DayOf(Dat))+'.'
  +IntToStr(YearOf(Dat));
end;

function    TFrm_main.CommaPoint (X: String) : String;
var iii : Integer;
begin
 iii:=pos(',',X) ;
 if iii<>0 then
 Result:=copy(X,1,iii-1)+'.'+copy(X,iii+1,5)
 else
 Result:=x;
end;


end.
