unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, Menus;

type
  TFrm_main = class(TForm)
    ItemMenu: TMainMenu;
    user_item: TMenuItem;
    types_item: TMenuItem;
    master_item: TMenuItem;
    oper_item: TMenuItem;
    schetItem: TMenuItem;
    klient_item: TMenuItem;
    procedure FormActivate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormCreate(Sender: TObject);
    procedure user_itemClick(Sender: TObject);
    procedure types_itemClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
    procedure master_itemClick(Sender: TObject);
    procedure oper_itemClick(Sender: TObject);
    procedure schetItemClick(Sender: TObject);
  private
procedure CreateAndShowChildForm_user;
procedure CreateAndShowChildForm_type;
procedure CreateAndShowChildForm_master;
procedure CreateAndShowChildForm_oper;
procedure CreateAndShowChildForm_schet;
procedure CreateAndShowChildForm_klient;
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_func, Un_dm, Un_user, Un_types, Un_autorize, Un_master, Un_oper,
  Un_schet, Un_klient;
const
  FileName = 'connection_string.txt';


{$R *.dfm}
procedure TFrm_main.CreateAndShowChildForm_user;
begin
  try
    UpdateFormProperties('Frm_user', 'Форма работы с данными пользователя',
      clBtnFace, 1024, 768);
    Frm_user.FormStyle := fsMDIChild;
    Frm_user.Show;
    AdjustChildFormSize(Frm_user, Self);
  except
    on E: Exception do
    begin
      ShowMessage('Ошибка: ' + E.Message);
      Frm_user.Release;
    end;
  end;
end;
procedure TFrm_main.CreateAndShowChildForm_schet;
begin
  try
    UpdateFormProperties('Frm_user', 'Форма работы с данными счетчика',
      clBtnFace, 1024, 768);
    Frm_schet.FormStyle := fsMDIChild;
    Frm_schet.Show;
    AdjustChildFormSize(Frm_schet, Self);
  except
    on E: Exception do
    begin
      ShowMessage('Ошибка: ' + E.Message);
      Frm_schet.Release;
    end;
  end;
end;

procedure TFrm_main.CreateAndShowChildForm_oper;
begin
  try
    UpdateFormProperties('Frm_oper', 'Форма работы с данными операторо',
      clBtnFace, 1024, 768);
    Frm_oper.FormStyle := fsMDIChild;
    Frm_oper.Show;
    AdjustChildFormSize(Frm_oper, Self);
  except
    on E: Exception do
    begin
      ShowMessage('Ошибка: ' + E.Message);
      Frm_oper.Release;
    end;
  end;
end;


 procedure TFrm_main.CreateAndShowChildForm_master;
begin
  try
    UpdateFormProperties('Frm_master', 'Форма работы с данными мастера',
      clBtnFace, 1024, 768);
    Frm_master.FormStyle := fsMDIChild;
    Frm_master.Show;
    AdjustChildFormSize(Frm_master, Self);
  except
    on E: Exception do
    begin
      ShowMessage('Ошибка: ' + E.Message);
      Frm_master.Release;
    end;
  end;
end;

procedure TFrm_main.CreateAndShowChildForm_type;
begin
  try
    UpdateFormProperties('Frm_types', 'Форма работы с данными о счетчике',
      clBtnFace, 1024, 768);
    Frm_types.FormStyle := fsMDIChild;
    Frm_types.Show;

    AdjustChildFormSize(Frm_types, Self);
  except
    on E: Exception do
    begin
      ShowMessage('Ошибка: ' + E.Message);
      Frm_types.Release;
    end;
  end;
end;

procedure TFrm_main.CreateAndShowChildForm_klient;
begin
  try
    UpdateFormProperties('Frm_klient', 'Форма работы с данными клиента',
      clBtnFace, 1024, 768);
    Frm_klient.FormStyle := fsMDIChild;
    Frm_klient.Show;
    AdjustChildFormSize(Frm_klient, Self);
  except
    on E: Exception do
    begin
      ShowMessage('Ошибка: ' + E.Message);
      Frm_klient.Release;
    end;
  end;
end;


procedure TFrm_main.FormActivate(Sender: TObject);
begin
  SaveConnectionStringToFile(FileName, dm.connection.ConnectionString);
end;

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  SaveFormState(Self);
end;

procedure TFrm_main.FormCreate(Sender: TObject);
begin
  SetFormPropertiesIfNeeded;
  LoadFormState(Self);
end;

procedure TFrm_main.FormShow(Sender: TObject);
begin
  try
    UpdateFormProperties('Frm_autor', 'Форма авторизации',
      clBtnFace, 1024, 768);
    Frm_autor.ShowModal;
  except
    Frm_autor.Free;
    raise;
  end;

end;

procedure TFrm_main.master_itemClick(Sender: TObject);
begin
  CreateAndShowChildForm_master;
end;

procedure TFrm_main.oper_itemClick(Sender: TObject);
begin
   CreateAndShowChildForm_oper;
end;

procedure TFrm_main.schetItemClick(Sender: TObject);
begin
  CreateAndShowChildForm_schet;
end;

procedure TFrm_main.types_itemClick(Sender: TObject);
begin
    CreateAndShowChildForm_type;
end;

procedure TFrm_main.user_itemClick(Sender: TObject);
begin
    CreateAndShowChildForm_user;
end;

end.
