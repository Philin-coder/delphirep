unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ExtCtrls, Menus,jpeg;

type
  TFrm_main = class(TForm)
    itemMenu: TMainMenu;
    main_Image: TImage;
    m_user_item: TMenuItem;
    m_work_item: TMenuItem;
    report_item: TMenuItem;
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
    procedure m_user_itemClick(Sender: TObject);
    procedure m_work_itemClick(Sender: TObject);

  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_func, Un_dm , Un_m_user, Un_work;


{$R *.dfm}
  const
  FileName = 'connection_string.txt';

procedure TFrm_main.FormActivate(Sender: TObject);
begin
  SaveConnectionStringToFile(FileName, dm.connection.ConnectionString);
end;

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  main_Image.Picture:=nil;
  SaveFormState(Self);
end;

procedure TFrm_main.FormCreate(Sender: TObject);
begin
SetFormPropertiesIfNeeded;
with main_Image do
begin
    Stretch:=true;
    AutoSize:=true;
end;
LoadFormState(Self);
LoadImageFromResource('BACKGROUND_IMAGE',main_Image);
end;

procedure TFrm_main.m_user_itemClick(Sender: TObject);
begin
try
UpdateFormProperties('Frm_muser', 'Форма работы с участником',
clBtnFace, 1024, 768);
 Frm_muser.ShowModal;
except
Frm_muser.Free;
raise;
end;

end;

procedure TFrm_main.m_work_itemClick(Sender: TObject);
begin
try
UpdateFormProperties('Frm_work', 'Форма работы с работой',
clBtnFace, 1024, 768);
 Frm_work.ShowModal;
except
Frm_work.Free;
raise;
end;

end;

end.

