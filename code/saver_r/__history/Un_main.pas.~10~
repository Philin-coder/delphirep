unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ExtCtrls, Menus,adodb,db,jpeg, StdCtrls;
const
  FileName = 'connection_string.txt';

type
  TFrm_main = class(TForm)
    main_Image: TImage;
    ItemMenu: TMainMenu;
    lang_item: TMenuItem;
    Button1: TButton;
    procedure FormCreate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
    procedure lang_itemClick(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_dm, Un_func, Un_lang;

{$R *.dfm}

procedure TFrm_main.Button1Click(Sender: TObject);
begin
   ArchiveFolderWithWinRAR;
end;

procedure TFrm_main.FormActivate(Sender: TObject);
begin
  DisableLoginPromptsOnDataModule('dm');
  SaveConnectionStringToFile(FileName, dm.connection.ConnectionString);
end;

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  main_Image.Picture := nil;
  SaveFormState(Self);
end;

procedure TFrm_main.FormCreate(Sender: TObject);
begin
  SetFormPropertiesIfNeeded;
  AdjustImageProperties(main_Image);
  LoadFormState(Self);
  LoadImageFromResource('BACKGROUND_IMAGE', main_Image);
end;

procedure TFrm_main.lang_itemClick(Sender: TObject);
begin
    try
    UpdateFormProperties('Frm_lang', 'Форма работы с информацинй о языке',
      clBtnFace, 1024, 768);
    Frm_lang.ShowModal;
  except
    on E: Exception do
    begin
      if not (E is EMyException) then
        raise EDatabaseError.Create('Ошибка работы  формой  информацини о языке', 3001);
      HandleException(E);
      if Assigned(Frm_lang) then
        Frm_lang.Free;
      raise;
    end;
  end;
end;

end.
