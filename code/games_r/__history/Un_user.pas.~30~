begin
  if  user_role_Radio.Checked=true then
  begin
    try
     with dm.usverQuery do
     begin
      close;
      sql.Clear;
      sql.Text:=
  'select'+' '+
  'usver.usverId,'+' '+
  'usver.usver_role,'+' '+
  'usver.usver_pass'+' '+
  'from usver'+' '+
