  if  spec_name_radio.Checked=true then
  begin
    try
     with dm.specQuery do
     begin
      close;
      sql.Clear;
      sql.Text:=
       'select'+' '+
        'Speciality.id_speciality,'+' '+
        'Speciality.name,'+' '+
        'Speciality.faculty'+' '+
        'from Speciality'+' '+
        'where 1=1'+' '+
       'order by Speciality.name asc';
      Open;
     end;
    except
        on E: EDatabaseError do
  begin
    ShowMessage('Ошибка базы данных: ' + E.Message);
    HandleException(E);
    raise;
  end;
  on E: EOleError do
  begin
    ShowMessage('Ошибка Ole: ' + E.Message);
    HandleException(E);
    raise;
  end;
  on E: Exception do
  begin
    ShowMessage('Общая ошибка: ' + E.Message);
    HandleException(E);
    Raise;
  end;
end;
end;
end;

procedure TFrm_spec.spec_reset_radioClick(Sender: TObject);
  var i,j,c:Integer;
begin
  try
  if spec_reset_radio.Checked then
  begin
    with Frm_spec do
    begin
      for I := 0 to ComponentCount - 1 do
      begin
        if Components[I] is TLabeledEdit then
        begin
          (Components[I] as TLabeledEdit).Clear;
        end;
      end;
      for c := 0 to ComponentCount - 1 do
      begin
        if Components[c] is TCheckBox then
        begin
          (Components[c] as TCheckBox).Checked := False;
        end;
      end;
      for j := 0 to ComponentCount - 1 do
      begin
        if Components[j] is TRadioButton then
        begin
          (Components[j] as TRadioButton).Checked := False;
        end;
      end;
    end;
    with dm.specQuery do
    begin
      Close;
      sql.Clear;
      sql.Text :=
        'select'+' '+
        'Speciality.id_speciality,'+' '+
        'Speciality.name,'+' '+
        'Speciality.faculty'+' '+
        'from Speciality'+' '+
        'where 1=1';
      Open;
    end;
  end;
except
  on E: EDatabaseError do
  begin
    ShowMessage('Ошибка базы  данных: ' + E.Message);
    HandleException(E);
    raise;
  end;
  on E: EOleError do
  begin
    ShowMessage('Ошибка COM: ' + E.Message);
    HandleException(E);
    raise;
  end;
  on E: Exception do
  begin
    ShowMessage('Общая ошибка: ' + E.Message);
    HandleException(E);
    raise;
  end;
end;
end;

procedure TFrm_spec.spec_sel_btnClick(Sender: TObject);
begin
  try
    if not DM.Connection.Connected then
      raise EDatabaseError.Create('Соедмнение с базой не установлено ',4001);
    with DM.sel_spec_by_naim do
    begin
      Close;
      Parameters.ParamByName('@m_name').Value :=spec_cond_edit.Text;
      Open;
       DM.specQuery.Recordset:=dm.sel_spec_by_naim.Recordset;
    end;
  except
  on E: EDatabaseError do
  begin
    ShowMessage('Ошибка  базы данных: ' + E.Message);
    HandleException(E);
    raise;
  end;
  on E: EOleError do
  begin
    ShowMessage('Ошибка  Ole: ' + E.Message);
    HandleException(E);
    raise;
  end;
  on E: Exception do
  begin
    ShowMessage('Общая ошибка: ' + E.Message);
    HandleException(E);
    Raise;
  end;
end;
end;

end.
