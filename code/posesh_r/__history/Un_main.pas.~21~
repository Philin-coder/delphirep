unit Un_main;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs,jpeg,ADODB,db, ExtCtrls, Menus;
  const
  FileName = 'connection_string.txt';

type
  TFrm_main = class(TForm)
    Main_Image: TImage;
    ItemMenu: TMainMenu;
    teacher_item: TMenuItem;
    spec_item: TMenuItem;
    group_item: TMenuItem;
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormActivate(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure teacher_itemClick(Sender: TObject);
    procedure spec_itemClick(Sender: TObject);
    procedure group_itemClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Frm_main: TFrm_main;

implementation

uses Un_dm, Un_func, Un_teacher, Un_spec, Un_group;

{$R *.dfm}

procedure TFrm_main.FormActivate(Sender: TObject);
begin
  DisableLoginPromptsOnDataModule('dm');
  SaveConnectionStringToFile(FileName, dm.connection.ConnectionString);
end;

procedure TFrm_main.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  main_Image.Picture := nil;
  SaveFormState(Self);
end;

procedure TFrm_main.FormCreate(Sender: TObject);
begin
  SetFormPropertiesIfNeeded;
  AdjustImageProperties(main_Image);
  LoadFormState(Self);
  LoadImageFromResource('BACKGROUND_IMAGE', main_Image);
end;

procedure TFrm_main.group_itemClick(Sender: TObject);
begin
  try
    UpdateFormProperties('Frm_group', 'Форма работы с информацией о группе',
      clBtnFace, 1024, 768);
    Frm_group.ShowModal;
  except
    on E: Exception do
    begin
      if not (E is EMyException) then
        raise EDatabaseError.Create('Ошибка работы с Формой работы о группе', 3001);
      HandleException(E);
      if Assigned(Frm_group) then
        Frm_group.Free;
      raise;
    end;
  end;
end;

procedure TFrm_main.spec_itemClick(Sender: TObject);
begin
  try
    UpdateFormProperties('Frm_spec', 'Форма работы с информацией о специальности',
      clBtnFace, 1024, 768);
    Frm_spec.ShowModal;
  except
    on E: Exception do
    begin
      if not (E is EMyException) then
        raise EDatabaseError.Create('Ошибка работы с Формой работы о специальности', 3001);
      HandleException(E);
      if Assigned(Frm_spec) then
        Frm_spec.Free;
      raise;
    end;
  end;
end;

procedure TFrm_main.teacher_itemClick(Sender: TObject);
begin
  try
    UpdateFormProperties('Frm_teacher', 'Форма работы с информацией о преподавателе',
      clBtnFace, 1024, 768);
    Frm_teacher.ShowModal;
  except
    on E: Exception do
    begin
      if not (E is EMyException) then
        raise EDatabaseError.Create('Ошибка работы с Формой работы с информацией о преподавателе', 3001);
      HandleException(E);
      if Assigned(Frm_teacher) then
        Frm_teacher.Free;
      raise;
    end;
  end;
end;

end.
